<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/gradiantback"
  tools:context=".activities.engineering.EngineeringDeleteActivity">

  <Button
    android:id="@+id/engdelet_btn_prline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/button"
    android:padding="16dp"
    android:text="حذف خط تولید"
    android:textColor="#FFFFFF"
    android:textSize="14sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/guideline21"
    app:layout_constraintVertical_bias="0.19999999" />

  <Button
    android:id="@+id/engdelet_btn_prtype"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/button"
    android:padding="16dp"
    android:text="حذف پروژه"
    android:textColor="#FFFFFF"
    android:textSize="14sp"
    app:layout_constraintEnd_toEndOf="@+id/engdelet_btn_prline"
    app:layout_constraintStart_toStartOf="@+id/engdelet_btn_prline"
    app:layout_constraintTop_toBottomOf="@+id/engdelet_btn_prline" />

  <Button
    android:id="@+id/engdelet_btn_station"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/button"
    android:padding="16dp"
    android:text="حذف ایستگاه"
    android:textColor="#FFFFFF"
    android:textSize="14sp"
    app:layout_constraintEnd_toEndOf="@+id/engdelet_btn_prtype"
    app:layout_constraintStart_toStartOf="@+id/engdelet_btn_prtype"
    app:layout_constraintTop_toBottomOf="@+id/engdelet_btn_prtype" />

  <Button
    android:id="@+id/engdelet_btn_op"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/button"
    android:padding="16dp"
    android:text="حذف OP"
    android:textColor="#FFFFFF"
    android:textSize="14sp"
    app:layout_constraintEnd_toEndOf="@+id/engdelet_btn_station"
    app:layout_constraintStart_toStartOf="@+id/engdelet_btn_station"
    app:layout_constraintTop_toBottomOf="@+id/engdelet_btn_station" />

  <TextView
    android:id="@+id/textView2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/button"
    android:gravity="center"
    android:text="حذف داده"
    android:textColor="#FFFFFF"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/guideline21"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline21"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.1" />
</androidx.constraintlayout.widget.ConstraintLayout>