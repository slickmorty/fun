<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/gradiantback"
  tools:context=".activities.engineering.EngineeringUpdateActivity">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/eguideline14"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/eguideline12"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.85" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/eguideline11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.2" />

  <HorizontalScrollView
    android:id="@+id/ehorizontalScrollView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layoutDirection="rtl"
    android:padding="16dp"
    app:layout_constraintBottom_toTopOf="@+id/eguideline11"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:background="@drawable/general_bracket"
      android:gravity="center"
      android:layoutDirection="rtl"
      android:orientation="horizontal"
      android:padding="5dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
          android:id="@+id/engup_btn_addproducttype"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:background="@drawable/button"
          android:gravity="center"
          android:padding="8dp"
          android:text="ویرایش پروژه"
          android:textColor="#FFFFFF" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
          android:id="@+id/engup_btn_addprline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:background="@drawable/button"
          android:padding="8dp"
          android:text="ویرایش خط تولید"
          android:textColor="#FFFFFF" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
          android:id="@+id/engup_btn_addstation"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:background="@drawable/button"
          android:gravity="center"
          android:padding="8dp"
          android:text="ویرایش ایستگاه"
          android:textColor="#FFFFFF" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
          android:id="@+id/engup_btn_addop"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:layout_marginTop="16dp"
          android:background="@drawable/button"
          android:padding="8dp"
          android:text="ویرایش OP"
          android:textColor="#FFFFFF" />
      </LinearLayout>

    </LinearLayout>
  </HorizontalScrollView>

  <ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@+id/eguideline12"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/eguideline11"
    app:layout_constraintVertical_bias="1.0">

