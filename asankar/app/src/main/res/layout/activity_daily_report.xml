<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/gradiantback"
  tools:context=".activities.production.dailyactivity.DailyReportActivity">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/daily_guideline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.15" />

  <Button
    android:id="@+id/daily_btn_prl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/button"
    android:padding="8dp"
    android:text="انتخاب خط تولید"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:visibility="visible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/daily_guideline"
    tools:visibility="visible" />

  <Button
    android:id="@+id/daily_btn_station"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/button"
    android:padding="8dp"
    android:text="انتخاب ایستگاه"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="@+id/daily_btn_prl"
    app:layout_constraintStart_toStartOf="@+id/daily_btn_prl"
    app:layout_constraintTop_toBottomOf="@+id/daily_btn_prl"
    tools:visibility="visible" />

  <Button
    android:id="@+id/daily_btn_product"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/button"
    android:padding="8dp"
    android:text="انتخاب محصول"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="@+id/daily_btn_station"
    app:layout_constraintStart_toStartOf="@+id/daily_btn_station"
    app:layout_constraintTop_toBottomOf="@+id/daily_btn_station"
    tools:visibility="visible" />

  <Button
    android:id="@+id/daily_btn_op"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/button"
    android:padding="8dp"
    android:text="انتخاب OP"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="@+id/daily_btn_product"
    app:layout_constraintStart_toStartOf="@+id/daily_btn_product"
    app:layout_constraintTop_toBottomOf="@+id/daily_btn_product"
    tools:visibility="visible" />

  <Button
    android:id="@+id/daily_btn_confirm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/button"
    android:padding="8dp"
    android:text="تایید"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="@+id/daily_btn_op"
    app:layout_constraintStart_toStartOf="@+id/daily_btn_op"
    app:layout_constraintTop_toBottomOf="@+id/daily_btn_op"
    tools:visibility="visible" />

  <TextView
    android:id="@+id/daily_txt_view"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/textview"
    android:backgroundTint="#05197C"
    android:gravity="center"
    android:text="ثبت فعالیت روزانه"
    android:textColor="#FFFFFF"
    android:textSize="36sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/daily_guideline"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>